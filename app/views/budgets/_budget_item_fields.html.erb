<div class="budget_item">
	<span class="description span-11">
		<%= f.label :description %> <%= f.text_field :description %>
	</span>
	<span class="estimated_cost span-6">
		<%= f.label :estimated_cost, :class => "span-3" %> 
		<%= f.text_field :estimated_cost, :class => "span-3 last" %>
	</span>
	<span class="actual_cost span-5">
		<%= f.label :actual_cost, :class => "span-2" %> 
		<%= f.text_field :actual_cost, :class => "span-3 last" %>
	</span>	
	<%= f.hidden_field :position, :class => "position" %>
	<div class="actions span-2 last">
		<%= f.link_to_remove do %>
			<%= image_tag "icons/delete.png" %>
		<% end -%>
		<span class="handle"><%= image_tag "drag-drop-icon.gif" %></span>
	</div>
</div>