		<%= stylesheet_link_tag "http://www.confetti.co.uk/css/style.css", :media => "all" %>
 		<%= javascript_include_tag "application" %>
 		<%= csrf_meta_tags %>
 		<script src="http://www.confetti.co.uk/javascripts/modernizr-1.7.min.js"></script>
	</head>
	<body>
		<div id="container" class="container">
			<%= render :partial => 'shared/header' %>

			<div id="content" class="span-19">
				<%= render :partial => 'shared/error_messages' %>

				<%= yield %>

			</div>

			<div id="appmenu" class="span-5 last">
				<%= render :partial => 'shared/app-menu' %>
			</div>

		</div>
		<%= render :partial => 'shared/footer' %>
		<%= yield :javascript %>
	</body> 
