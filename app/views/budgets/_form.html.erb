<%= nested_form_for @budget do |f| %>
	<div id="budget_items">
		<%= f.fields_for :budget_items %>
	</div>
	<div id="budget_live_totals">
		<div id="estimated_total" class="span-6 prepend-11">
			<strong class="span-3">Estimated Total:</strong> 
			<span class="span-3 last"><input type="text" readonly="readonly" /></span>
		</div>
		<div id="actual_total" class="span-5 append-2 last">
			<strong>Actual Total:</strong> <input type="text" readonly=readonly</span>
		</div>
	</div>
	<p><%= f.link_to_add :budget_items, :class => "button positive" do %>
		<%= image_tag "icons/add.png", :title => "title", :class => "class" %> Add a Budget Item 
	<% end %>
	<%= content_tag :button, :type => :submit, :class => :positive do %>
	   <%= image_tag "icons/table_save.png"%> Save Budget
	<% end %>
	</p>
<% end %>